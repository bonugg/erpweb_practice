        <div class="menu_div">
            <div id="img_div">
                <div id="menu_btn"></div>
            </div>
            <ul class="appmenu">
                <div id="div_imt2"></div>
                <li class="appmenu_item">
                    <div class="menu_text_div_app">
                        <a class="menu_text_app" href="/vacation">전자결재 신청하기</a>
                    </div>
                </li>
                <li class="appmenu_item">
                    <div class="menu_text_div_app">
                        <a class="menu_text_app" href="/meeting">전자결재 요청 목록</a>
                    </div>
                </li>
            </ul>
        </div>
        <div class="menu_div2">
            <div id="img_div">
                <div id="menu_btn"></div>
            </div>
            <ul class="boardmenu">
                <div id="div_imt2"></div>
                <li class="boardmenu_item">
                    <div class="menu_text_div_app">
                        <a class="menu_text_app" href="/business">공지 게시판</a>
                    </div>
                </li>
                <li class="boardmenu_item">
                    <div class="menu_text_div_app">
