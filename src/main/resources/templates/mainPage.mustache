<!doctype html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link rel="stylesheet" type="text/css" href="css/main.css">
    <script src='https://cdn.jsdelivr.net/npm/@fullcalendar/core@6.1.8/index.global.min.js'></script>
    <script src='https://cdn.jsdelivr.net/npm/@fullcalendar/daygrid@6.1.8/index.global.min.js'></script>
    <script src='js/locales/ko.global.min.js'></script>
    <script src='https://apis.google.com/js/api.js'></script>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js'></script>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js'></script>
<body>
{{>header/header}}
{{#user.CNO}}
    <input type="hidden" id="cno" value="{{user.CNO}}">
    <input type="hidden" id="no" value="{{user.NO}}">
{{/user.CNO}}
<div id="fullscreen">
    <div id="screen1">
        <div id="screen1-1">
            <div id="screen1-1-1">
                <div id="screen1-1-1-1">
                    <div id="screen1-1-1-2">
                        <a>출퇴근 확인</a>
                    </div>
                    <div id="screen1-1-1-3">
                        <div id="screen1-1-1-4">
                            <div id="screen1-1-1-4-1">
                                <a id="on_text">출근 시각</a>
                            </div>
                            <div id="screen1-1-1-4-2">
                                <button id="on">출근</button>
                            </div>
                        </div>
                        <div id="screen1-1-1-5">
                            <div id="screen1-1-1-4-1">
                                <a id="off_text">퇴근 시각</a>
                            </div>
                            <div id="screen1-1-1-4-2">
                                <button id="off">퇴근</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="screen1-2">
            <div id="screen1-2-1">

            </div>

        </div>
    </div>
    <div id="screen2">
        <div id="screen2-1">
            <div id="cal_btn_div">
                <button class="cal_btn" id="all">출근</button>
                <button class="cal_btn" id="vacation" style="margin-left: 5px">
                    <div id="circle_vacation"></div>
                    휴가
                </button>
                <button class="cal_btn" id="meeting" style="margin-left: 5px">
                    <div id="circle_meeting"></div>
                    회의
                </button>
                <button class="cal_btn" id="business" style="margin-left: 5px">
                    <div id="circle_business"></div>
                    출장
                </button>
            </div>
            <div id="cal_div">
                <div id='calendar'></div>
            </div>
        </div>
    </div>
</div>
<div class="popup_layer" id="popup_layer" style="display: none;">
    <div class="popup_box">
        <!--팝업 컨텐츠 영역-->
        <div class="popup_cont">
            <div id="popup_vacationtype_div"></div>
            <div id="popup_title_div">
                <p id="popup_title"></p>
            </div>
            <div id="popup_date_div">
                <p id="popup_date"></p>
            </div>
            <div id="popup_desc_div">
                <p id="popup_desc"></p>
            </div>

        </div>
    </div>
</div>
</body>
<script src="js/main.js"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script>

</script>
</html>